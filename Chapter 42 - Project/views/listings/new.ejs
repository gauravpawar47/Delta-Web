<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
        <h3>Add Details</h3><br>
        <form method="POST" action="/listings" class="needs-validation" enctype="multipart/form-data" novalidate>
            <div class="mb-1">
                <label for="name" class="form-title">Title</label>
                <input type="text" name="listing[title]" class="form-control" id="name" placeholder="Add a Catchy Title" required> 
                
                <div class="valid-feedback">Title Looks Good!</div>
                <div class="invalid-feedback">Please Enter Valid Title!</div>
                <br><br>
            </div>
            
            <div class="mb-1">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" class="form-control" id="description" cols="30" rows="10" placeholder="You know how this goes like" required></textarea> 
                
                
                <div class="valid-feedback">Description Looks Good!</div>
                <div class="invalid-feedback">Please Enter Valid Description!</div>
                <br><br>            
            </div>

            <div class="mb-1">
                <label for="image" class="form-label">Upload Image</label>
                <input type="file" name="listing[image]" class="form-control" id="image" required> <br><br>
            </div>
            
            <div class="row">
                <div class="mb-1 col-4">            
                    <label for="price" class="form-label">Price</label>
                    <input name="listing[price]" class="form-control" id="price" placeholder="1200 " required> 
                    
                    <div class="valid-feedback">Price Looks Descent!</div>
                    <div class="invalid-feedback">Please Enter Valid Price!</div>
                    <br><br>
                </div>

                <div class="mb-1 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" class="form-control" id="country" placeholder="India" required> 
                        
                    <div class="valid-feedback">Nice Country!</div>
                    <div class="invalid-feedback">Please Enter Valid Country!</div>
                    <br><br>
                </div>
            </div>

            <div class="mb-1">
                <label for="location" class="form-label">Location</label>
                <input type="text" class="form-control" name="listing[location]" id="location" placeholder="Noida"required> 
                
                <div class="valid-feedback">Awesome Location!</div>
                <div class="invalid-feedback">Please Enter Valid Location!</div>
                <br><br>
            </div>

            <br>
            <button class="btn btn-dark add-btn">Add</button> <br><br>
        </form>
    </div>
</div>