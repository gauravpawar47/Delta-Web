<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
        <form method="POST" action="/listings">
            <div class="mb-1">
                <label for="name" class="form-title">Title</label>
                <input type="text" name="listing[title]" class="form-control" id="name" placeholder="Add a Catchy Title"> <br><br>
            </div>
            
            <div class="mb-1">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" class="form-control" id="description" cols="30" rows="10" placeholder="You know how this goes like"></textarea> <br><br>            
            </div>

            <div class="mb-1">
                <label for="image" class="form-label">Image</label>
                <input type="text" name="listing[image]" class="form-control" id="image" placeholder="URL"> <br><br>
            </div>
            
            <div class="row">
                <div class="mb-1 col-4">            
                    <label for="price" class="form-label">Price</label>
                    <input type="number" name="listing[price]" class="form-control" id="price" placeholder="1200 "> <br><br>
                </div>

                <div class="mb-1 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" class="form-control" id="country" placeholder="India"> <br><br>
                </div>
            </div>

            <div class="mb-1">
                <label for="location" class="form-label">Location</label>
                <input type="text" class="form-control" name="listing[location]" id="location" placeholder="Noida"> <br><br>
            </div>

            <br>
            <button class="btn btn-dark">Add</button> <br><br>
        </form>
    </div>
</div>