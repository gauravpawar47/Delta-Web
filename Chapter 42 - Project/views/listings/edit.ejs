<% layout("/layouts/boilerplate") %>
<body>
    <h3>Edit Details</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
        <input type="text" name="listing[title]" id="name" value="<%= listing.title %>"> <br><br>
        
        <textarea name="listing[description]" id="description" cols="30" rows="10"><%= listing.description %></textarea> <br><br>

        <input type="text" name="listing[image]" id="image" value="<%= listing.image.url %>"> <br><br>
        
        <input type="number" name="listing[price]" id="price" value="<%= listing.price %>"> <br><br>

        <input type="text" name="listing[country]" id="country" value="<%= listing.country %>"> <br><br>

        <input type="text" name="listing[location]" id="location" value="<%= listing.location %>"> <br><br>

        <button>Edit</button>
    </form>
</body>