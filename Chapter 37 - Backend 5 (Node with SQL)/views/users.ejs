<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
</head>
<body>
    <form method="GET" action="/user/add">
        <button> Add user </button>
    </form>
    <br><br>

    <table border="1px solid black">
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Username</th>
        </tr>
        
        <% for(user of users) { %>
            <tr>
                <td> <%= user.id %> </td>
                <td> <%= user.email %> </td>
                <td> <%= user.username %> </td>
                <td>
                    <form method="GET" action="/user/<%= user.id %>/edit">
                        <button>Edit</button>
                    </form>
                </td>
                <td>
                    <form method="GET" action="/user/<%= user.id %>/delete">
                        <button>Delete</button>
                    </form>
                </td>
            </tr>   
        <% } %>
    </table>
</body>
</html>

